<?xml version="1.0"?>
<ruleset name="Maplee Coding Standard">
    <description>Maplee coding standard based on PSR-12</description>

    <!-- Display progress -->
    <arg value="p"/>
    <!-- Use colors in output -->
    <arg name="colors"/>
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Use PSR-12 -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>src</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset> 